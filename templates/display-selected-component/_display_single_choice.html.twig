{% if "single-choice" in templateComponent.component.name %}
    <div class="single-choice-template-creation">
        <div class="single-choice-template-draggable">
            <img src="{{ asset('build/images/icons/burger.png') }}"/>
        </div>
        <div class="single-choice-template-content">
            <input type="hidden" class="component-order-number" name="component-order-number">
            <input type="hidden" class="research-template-component-id" name="research-template-component-id" value="{{ templateComponent.component.id }}">
            <p class="single-choice-template-question" id="single-choice-template-question">
                {{templateComponent.component.question}}
                {% if templateComponent.component.isMandatory %}
                    <span class="single-choice-red-star" id="single-choice-red-star">*</span>
                {% endif %}
            </p>
            <div class="single-choice-template-answers">
                {% for answer in templateComponent.component.answers %}
                    <div class="single-choice-template-answer">
                        <input type="radio" value="{{answer.answer}}" name="answer{{templateComponent.component.id}}">
                        <label for="answer{{templateComponent.component.id}}" class="single-choice-template-answer-label" id="single-choice-template-answer-label">
                        {{answer.answer}}
                        </label>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="single-choice-template-actions">
            <img src="{{ asset('build/images/icons/edit.png') }}"/>
            <img src="{{ asset('build/images/icons/close.png') }}"/>
        </div>
    </div>
{% endif %}
