{% if "section" in templateComponent.component.name %}
	<div class="section_title_display" draggable="false">
		<div class="handle-template-component-draggable">
			<img src="{{ asset('build/images/icons/burger.png') }}"/>
		</div>
		<div class="component_section_title">
			<p>{{ templateComponent.component.title}}</p>
		</div>
		<div class="section_actions">
			<img src="{{ asset('build/images/icons/edit.png') }}"/>
			<img src="{{ asset('build/images/icons/close.png') }}"/>
		</div>
	</div>
{% endif %}