{% if "date-picker" in templateComponent.component.name %}
    <div class="date-picker-template-creation">
        <div class="handle-template-component-draggable" draggable= "true">
            <img src="{{ asset('build/images/icons/burger.png') }}" draggable= "true"/>
        </div>
        <div class="date-picker-template-content">
            {% include "display-selected-component/_component_order_id_inputs.html.twig" %}
            <p class="date-picker-template-title" id="date-picker-template-title">
                {{templateComponent.component.title}}
                {% if templateComponent.component.isMandatory %}
                    <span class="date-picker-red-star" id="date-picker-red-star">*</span>
                {% endif %}
            </p>
            <div class="date-picker-input">
                <input type="date" name="select-date" class="form-control" id="select-date" disabled="disabled">
            </div>
        </div>
        <div class="date-picker-template-actions">
            {% include "layout_edit.html.twig" %}
            {% include "display-selected-component/_delete_component.html.twig" %}
        </div>
    </div>
{% endif %}