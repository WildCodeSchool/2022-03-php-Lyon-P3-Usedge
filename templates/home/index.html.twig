{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
   <main class="main">
        <div>
            <img class="side-bar" src="{{ asset('build/images/sidebar.png') }}" alt=""/>
        </div>
        <div class="page-content">
            {% include "_header.html.twig" %}
            <div class="search-engine">
               <p>Find a request in the list</p>
               <div class="search-label">
                    <p>Elements to display</p>
                    <p>Project</p>
                    <p>Owner</p>
                    <p>Assigned coach</p>
                    <p>Creation date</p>
                </div>
                <form method="post">
                    <div class="checkbox">
                        <div>
                            <input type="checkbox" name="reasearch-plans" id="reasearch-plans">
                            <label for="reasearch-plans">reasearch-plans</label>
                        </div>
                        <div>
                            <input type="checkbox" name="reasearch-requests" id="reasearch-requests" checked>
                            <label for="reasearch-requests">reasearch-requests</label>
                        </div>
                    </div>
                    <select name="Project" id="Project">
                        <option value="">Select a project</option>
                    </select>
                    
                    <select name="Owner" id="Owner">
                        <option value="">Select an owner</option>
                    </select>

                    <select name="Assigned-coach" id="Assigned-coach">
                        <option value="">Select an owner</option>
                    </select>

                    <input type="date" name="Creation-date" id="Creation-date">
                </form>
            </div>
            <div class="research-list">
                <div class="requests-list" id="requests-list">
                    <div class="requests-header">
                        <div>
                            <p>Research requests</p>
                            <p>You can view here all the research requests submitted</p>
                        </div>
                        <button id="create-request">+ Create a research request</button>
                    </div>
                    <table>
                        <thead class="sort-by">
                            <tr>
                                <td id="requests-type">TYPE AND DATE</td>
                            </tr>
                            <tr class="sort-choice">
                                <td class="sort-by-choice" id="requests-project">PROJECT</td>
                                <td class="sort-by-choice" id="requests-coach-assigned">COACH ASSIGNED</td>
                                <td id="requests-owner">OWNER</td>
                                <td class="status">STATUS</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody class="result">
                            <tr>
                                <td id="view-request-type">No request available</td>
                            </tr>
                            <tr class="sort-choice">
                                <td class="view-choice"  id="view-requests-project">No project</td>
                                <td class="view-choice"  id="view-request-coach-assigned">No coach assigned</td>
                                <td>No owner assigned</td>
                                <td class="status">No status available</td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="plans-list" id="plans-list">
                    <div class="plans-header">
                        <div>
                            <p>Research plans</p>
                            <p>You can view here all the research plans created</p>
                        </div>
                        <button id="create-plans">+ Create a research plan</button>
                        </div>
                        <table>
                            <thead class="sort-by">
                                <tr>
                                    <td id="plans-type">TYPE AND DATE</td>
                                </tr>
                                <tr class="sort-choice">
                                    <td class="sort-by-choice" id="plans-project">PROJECT</td>
                                    <td class="sort-by-choice" id="plans-assigned-request">ASSIGNED REQUEST</td>
                                    <td id="plans-coach-assigned">COACH ASSIGNED</td>
                                    <td class="status">STATUS</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody class="result">
                            <tr>
                                <td id="view-plans-type">No plans available</td>
                            </tr>
                            <tr class="sort-choice">
                                <td class="view-choice" id="view-plans-project">No project</td>
                                <td class="view-choice"  id="view-plans-assigned-request">No assigned request</td>
                                <td>No coach assigned</td>
                                <td class="status">No status available</td>
                                <td></td>
                            </tr>
                        </tbody>
                        </table>
                    </div>
                       
                </div>
            </div>
        </div>
    </main>
{% endblock %}
