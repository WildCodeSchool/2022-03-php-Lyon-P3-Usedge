{% if "evaluation-scale" in templateComponent.component.name %}
    {% if componentId is same as templateComponent.component.id %}
        <form method="POST" class="evaluation-scale-edit-form">
            {% include "edit-selected-component/_csrfToken_edit_component.html.twig" %}
            <div class="handle-template-component-draggable">
                <img src="{{ asset('build/images/icons/burger.png') }}"/>
            </div>
            <div class="edit-component-evaluation-scale">
                <div class="edit-component-evaluation-scale-title">
                    <input type="hidden" id="update-evaluation-scale-name" name="name" value="evaluation-scale">
                    <input class="form-control mb-1 edit-evaluation-scale-input" type="text" name="question-evaluation-scale" value="{{ templateComponent.component.question}}" required>
                </div>
                <div class="evaluation-scale-template-star-container">
                    <input type="radio" name="answer" id="evaluation-scale-rate-5" value="1">
                    <label for="evaluation-scale-rate-5" class="evaluation-scale-template-rate">
                        <img src="{{ asset('build/images/icons/empty_rate.png') }}"/>
                    </label>
                    <input type="radio" name="answer" id="evaluation-scale-rate-4" value="2">
                    <label for="evaluation-scale-rate-4" class="evaluation-scale-template-rate">
                        <img src="{{ asset('build/images/icons/empty_rate.png') }}"/>
                    </label>
                    <input type="radio" name="answer" id="evaluation-scale-rate-3" value="3">
                    <label for="evaluation-scale-rate-3" class="evaluation-scale-template-rate">
                        <img src="{{ asset('build/images/icons/empty_rate.png') }}"/>
                    </label>
                    <input type="radio" name="answer" id="evaluation-scale-rate-2" value="4">
                    <label for="evaluation-scale-rate-2" class="evaluation-scale-template-rate">
                        <img src="{{ asset('build/images/icons/empty_rate.png') }}"/>
                    </label>
                    <input type="radio" name="answer" id="evaluation-scale-rate-1" value="5">
                    <label for="evaluation-scale-rate-1" class="evaluation-scale-template-rate">
                        <img src="{{ asset('build/images/icons/empty_rate.png') }}"/>
                    </label>
                </div>
                <div class="evaluation-scale-update-levels">
                    <input class="form-control mb-1 edit-evaluation-scale-input" type="text" name="low-label" value=" {{ templateComponent.component.lowLabel }}" required>
                    <input class="form-control mb-1 edit-evaluation-scale-input" type="text" name="high-label" value=" {{ templateComponent.component.highLabel }}" required>
                </div>
                <div>
                    {% include 'edit-selected-component/_edit_is_mandatory.html.twig' %}
                </div>
            </div>
            <div class="section-actions">
                <button class="update-button">Edit</button>
            </div>
            <a href="{{ path('research_template_add', {id: researchTemplate.id}) }}" class="close-edit">&times;</a>
        </form>
    {% else %}
		{% include 'display-selected-component/_display_evaluation_scale.html.twig' %}
	{% endif %}
{% endif %}