{% if "section" in templateComponent.component.name %}
	{% if componentId is same as templateComponent.component.id %}
	<form method="POST" class="section-title-edit-form">
		<div class="handle-template-component-draggable">
			<img src="{{ asset('build/images/icons/burger.png') }}"/>
		</div>
		<div class="edit-component-section-title">
			<input type="hidden" id="update-section-name" name="name" value="section">
			<input class="form-control edit-section-input" type="text" name="title" value="{{ templateComponent.component.title}}">
		</div>
		<div class="section-actions">
			<button class="update-button">Edit</button>
		</div>
	</form>
	{% else %}
		{% include 'display-selected-component/_display_section.html.twig' %}
	{% endif %}
{% endif %}