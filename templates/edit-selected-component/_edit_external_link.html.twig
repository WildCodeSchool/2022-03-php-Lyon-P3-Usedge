{% if "external-link" in templateComponent.component.name %}
	{% if componentId is same as templateComponent.component.id %}
	<form method="POST" class="external-link-template-creation" draggable="true">
		<div class="handle-template-component-draggable">
			<img src="{{ asset('build/images/icons/burger.png') }}"/>
		</div>
		<div class="external-link-template-content">
			<input type="text" class="external-link-template-title" id="external-link-template-title"
			value="{{templateComponent.component.title}}">
				{% if templateComponent.component.isMandatory %}
					<span class="external-link-red-star" id="external-link-red-star">*</span>
				{% endif %}
			</p>
			<div class="external-link-input">
				<input type="url" name="external-link" class="form-control" id="select-external-link" placeholder="https://www.google.com/...">
			</div>
		</div>
		<div class="external-link-template-actions">
			<img src="{{ asset('build/images/icons/edit.png') }}"/>
			<button>V</button>
		</div>
	</form>
	{% else %}
		{% include 'display-selected-component/_display_external_link.html.twig' %}
	{% endif %}
{% endif %}
