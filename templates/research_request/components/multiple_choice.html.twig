{% if "multiple-choice" in requestComponent.component.name %}
    <div class="request-multiple-choice-template-creation">
        <div class="request-multiple-choice-template-content">
            <p class="request-multiple-choice-template-question" id="multiple-choice-template-question">
                {{requestComponent.component.question}}
                {% if requestComponent.component.isMandatory %}
                    <span class="request-multiple-choice-red-star" id="multiple-choice-red-star">*</span>
                {% endif %}
            </p>
            <div class="request-multiple-choice-template-answers">
                {% for answer in requestComponent.component.answers %}
                    <div class="request-multiple-choice-template-answer">
                        <input type="checkbox" value="{{answer.answer}}" name="answer{{requestComponent.component.id}}">
                        <label for="answer{{requestComponent.component.id}}" class="request-multiple-choice-template-answer-label" id="multiple-choice-template-answer-label">
                        {{answer.answer}}
                        </label>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}